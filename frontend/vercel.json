{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://tripeasyapi-mauve.vercel.app",
      "REACT_APP_APP_NAME": "TripEasy",
      "REACT_APP_VERSION": "1.0.0"
    }
  },
  "env": {
    "REACT_APP_API_URL": "https://tripeasyapi-mauve.vercel.app",
    "REACT_APP_GOOGLE_MAPS_API_KEY": "your-google-maps-api-key-here",
    "REACT_APP_APP_NAME": "TripEasy",
    "REACT_APP_VERSION": "1.0.0"
  }
}